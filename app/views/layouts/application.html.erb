<!DOCTYPE html>
<html>
<head>
  <title>Rw</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body>
  <div id="wrapper">
    <div id="banner">
      <h1> RoverWay </h1>
      <p> Linux, ruby on rails, and things about my life </p>
    </div>

    <div id="navbar">
      <li><%= link_to "Home", root_url %></li>
      <li><%= link_to "About Me", "#" %></li>

      <% if user_signed_in? %>
        <div id="logged">
          <li><%= current_user.email %></li>
          <li><%= link_to "log out", "/users/sign_out" %></li>
        </div>
      <% end %>
    </div>

    <div id="notice">
      <p class="otice"><%= notice %></p>
      <p class="lert"><%= alert %></p>
    </div>

    <% tagcloud %>
    <% if controller.class == PostsController && @tags %>
      <div class="leftbar">
        <div id="category">
          <h3>Categories</h3>
          <ul>
            <li>category 1</li>
            <li>category 2</li>
          </ul>
        </div>

        <div id="tagcloud">
          <h3>Tag cloud</h3>
          <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
            <%= link_to tag, { :action => :tagged, :tag=> tag.name}, :class => css_class %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mainarea">
      <%= yield %>
    </div>
    <div id="blank"></div>
  </div>

</body>

</html>
