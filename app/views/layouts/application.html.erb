<!DOCTYPE html>
<html>
  <head>
    <title>Rw</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <div id="wrapper">
      <div id="banner">
        <h1><%= link_to "RoverWay", root_url%> </h1>
        <p> Linux, ruby on rails, and things about my life </p>
      </div>

      <div id="navbar">
        <li><%= link_to "Home", root_url %></li>
        <li><%= link_to "About Me", "aboutme" %></li>

        <% if user_signed_in? %>
          <div id="logged">
            <li><%= current_user.email %></li>
            <li><%= link_to 'New Post', new_post_path %></li>
            <li><%= link_to "log out", "/users/sign_out" %></li>
          </div>
        <% end %>
      </div>

      <div id="notice">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>

      <div class="leftbar">
        <%= render "/shared/query_sidebar" %>
        <%= render "/shared/categories_sidebar" %>
        <%= render "/shared/tagcloud_sidebar" %>
        <%= render "/shared/recent_comments_sidebar" %>
      </div>

      <div class="mainarea">
        <%= yield %>
      </div>

      <div id="blank"></div>
    </div>

  </body>

</html>
